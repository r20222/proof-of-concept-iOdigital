<article>
    <h3>Introduction</h3>
    <p>
        <%- data.introduction %>
    </p>
</article>

<article>
    <h3>Motivation</h3>
    <p>
       <%- data.motivation %>
    </p>
</article>

<article>
    <h3>Skills</h3>
    <ul>
        <% data.skills.forEach(skill => { %>
            <li><%= skill.label %></li>
        <% }); %>
        
    </ul>
</article>

<article>
    <h3>Projects via iO</h3>
    <% data.projects.forEach(project => { %>
        <section>
            <h4><%- project.role %></h4>
            <h5><%- project.company %></h5>
            <p>
                <%- project.description %>
            </p>
        </section>
    <% }); %>
</article>

<article>
    <h3>Work experience</h3>
    <% data.experience.forEach(experience => { %>
        <section>
            <h4><%- experience.role %></h4>
            <h5><%- experience.company %></h5>
            <p>
                <%- experience.description %>
            </p>
        </section>
    <% }) %>
</article>

<article>
    <h3>Education</h3>
    <% data.education.forEach(edu => { %>
        <section>
            <h4><%- edu.name %></h4>
            <h5><%- edu.institute %></h5>
        </section>
    <% }) %>
</article>

<article>
    <h3>Languages</h3>
    <% data.languages.forEach(lang => { %>
        <section>
            <% if (lang.language) { %>
                <section>
                    <h4><%- lang.language.name %></h4>
                </section>
            <% } %>
           
        </section>
    <% }) %>
</article>

<article>
    <h3>Publications</h3>
    <% data.publications.forEach(pub => { %>
        <section>
            <h4><%- pub.title %></h4>
            <h5><%- pub.description %></h5>
            <a href="<%- pub.link %>"><%- pub.link %></a>
        </section>
    <% }) %>
</article>

<article>
    <h3>Side projects</h3>
    <% data.sideProjects.forEach(side => { %>
        <section>
            <h4><%- side.title %></h4>
            <h5><%- side.description %></h5>
            <a href="<%- side.link %>"><%- side.link %></a>
        </section>
    <% }) %>
</article>














